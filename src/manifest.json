{
  "manifest_version": 2,
  "name": "TagProReplays",
  "version": "",
  "minimum_chrome_version": "49",
  "description": "Save Replays from within TagPro Games",
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-uNaYvNbqceDXrfK/UyL1z5bgy31m0ahirB8RD98Fcdk='; object-src 'self'",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tab",
    "storage",
    "unlimitedStorage",
    "https://github.com/chrahunt/TagProReplays/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.koalabeast.com/*",
        "http://*.newcompte.fr/*",
        "http://tangent.jukejuice.com/*"
      ],
      "exclude_matches": [
        "http://support.koalabeast.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/content.css",
        "css/record.css"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {},
  "web_accessible_resources": [
    "js/record.js",
    "images/**/*.png",
    "html/*.html",
    "fonts/*.woff"
  ]
}
